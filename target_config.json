{
  "services": [
    {
      "name": "http",
      "addr": ":80",
      "handler": {
        "type": "http",
        "metadata": {
          "sniffing": true
        }
      },
      "listener": {
        "type": "http"
      },
      "forwarder": {
        "nodes": [
          {
            "name": "target-api",
            "addr": "127.0.0.1:81",
            "filter": {
              "path": "/"
            }
          },
          {
            "name": "target-1",
            "addr": "127.0.0.1:81",
            "filter": {
              "path": "/test"
            }
          }
        ]
      }
    }
  ],
  "api": {
    "addr": ":81",
    "pathPrefix": "/",
    "accesslog": true,
    "auth": {
      "username": "api_user",
      "password": "api_pass"
    },
    "auther": "auther-0"
  }
}
